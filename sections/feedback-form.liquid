{% style %}
  .rating {
    unicode-bidi: bidi-override;
    direction: rtl;
    text-align: center;
  }
  .rating > input {
    display: none;
  }
  .rating > label {
    display: inline-block;
    padding: 5px;
    font-size: 30px;
    color: #ccc;
    cursor: pointer;
  }
  .rating > label:before {
    content: '★';
  }
  .rating > input:checked ~ label {
    color: #ffcc00;
  }
{% endstyle %}

