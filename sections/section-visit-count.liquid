{{ "section-visit-count.css" | asset_url | stylesheet_tag }}

{% style %}
  .padding-{{ section.id}} {
    padding-top: {{ section.settings.padding_top | divided_by:2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by:2 }}px;
  }
  .count__heading, .count_name {
    color: {{ section.settings.text_color}};
  }
  .count__heading {
    text-shadow: -4px 2px 0px {{ section.settings.background_color }}, -6px 2px 0px #000;
  }
  .count__container {
    background: {{ section.settings.background_color}};
  }
  .count__inner-container:hover {
    color: {{ section.settings.hover_text_color}};
    background-color: {{ section.settings.hover_background_color}};
  }
  @media screen and (min-width:750px) {
    .padding-{{ section.id}} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="count__container">
  <div class="page-width padding-{{ section.id }}">
    <div class="grid grid--2-col grid--4-col-desktop">
      {% for block in section.blocks %}
        <div class="grid__item">
          <div class="count__inner-container">
            <h2 class="count__heading">{{ block.settings.count }}</h2>
            <p class="count_name">{{ block.settings.count_name }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Visit Count Store",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "label": "Background color",
      "id": "background_color",
      "default": "#92ad83"
    },
    {
      "type": "color",
      "label": "Text color",
      "id": "text_color",
      "default": "#92ad83"
    },
    {
      "type": "header",
      "content": "Hover Color settings"
    },
    {
      "type": "color",
      "label": "Hover background color",
      "id": "hover_background_color",
      "default": "#caebb8"
    },
    {
      "type": "color",
      "label": "Hover text color",
      "id": "hover_text_color",
      "default": "#2a431c"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "label": "Padding top",
      "id": "padding_top",
      "default": 48,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "Px"
    },
    {
      "type": "range",
      "label": "Padding bottom",
      "id": "padding_bottom",
      "default": 48,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "Px"
    }
  ],
  "blocks": [
    {
      "type": "count",
      "name": "Count",
      "settings": [
        {
          "type": "text",
          "label": "Count",
          "id": "count",
          "default": "100K+"
        },
        {
          "type": "text",
          "label": "Count name",
          "id": "count_name",
          "default": "Number of Customers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Visit Count Store"
    }
  ]
}
{% endschema %}
